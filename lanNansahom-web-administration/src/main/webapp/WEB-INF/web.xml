<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<listener>
		<listener-class>eg.net.lanNansahom.server.ApplicationStartup</listener-class>
	</listener>
	<servlet>
		<servlet-name>CoreService</servlet-name>
		<servlet-class>eg.net.lanNansahom.server.CoreServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdministrationRemoteService</servlet-name>
		<servlet-class>eg.net.lanNansahom.server.AdministrationRemoteServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ExportServlet</servlet-name>
		<servlet-class>eg.net.lanNansahom.server.ExportServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GeneratorServlet</servlet-name>
		<servlet-class>eg.net.lanNansahom.server.GeneratorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CoreService</servlet-name>
		<url-pattern>/BackEnd/core</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AdministrationRemoteService</servlet-name>
		<url-pattern>/BackEnd/administration</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ExportServlet</servlet-name>
		<url-pattern>/export</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GeneratorServlet</servlet-name>
		<url-pattern>/generate</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>BackEnd.jsp</welcome-file>
	</welcome-file-list>

 </web-app>
